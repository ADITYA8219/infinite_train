@model IEnumerable<MoviesApp.Models.Movie>

@{ var director = ViewBag.DirectorName as string; }

<h2>
    @if (!string.IsNullOrWhiteSpace(director))
    {
@:Movies by "@director"
}
else
{
@:Movies by [Unknown Director]
}
</h2>

@if (!Model.Any())
{
<p>No movies found for this director.</p> }
            else
            {
<ul>
    @foreach (var movie in Model)
    {
<li>
    <strong>@movie.Moviename</strong>
    — Released on @movie.DateofRelease.ToShortDateString()
</li>}
</ul>}
